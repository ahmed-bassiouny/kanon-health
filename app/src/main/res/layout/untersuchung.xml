<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_untersuchung"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">

        <Button
            android:text="@string/physical_examination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button_koperliche"
            android:background="@drawable/round"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">

        <Button
            android:text="@string/laboratory_investigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/button_laboruntersuchung"
            android:background="@drawable/round"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">

        <Button
            android:text="@string/technical_inspection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button_techische"
            android:layout_gravity="center"
            android:background="@drawable/round"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">

        <Button
            android:text="@string/heart_listen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button_herz"
            android:layout_gravity="center"
            android:background="@drawable/round"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">

        <Button
            android:text="@string/others"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button_sonstiges"
            android:layout_gravity="center"
            android:background="@drawable/round"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">


    </LinearLayout>


</LinearLayout>
