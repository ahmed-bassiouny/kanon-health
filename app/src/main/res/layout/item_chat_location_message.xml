<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/message_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bubble_out"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:visibility="visible">



                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_message"
                        android:layout_width="130dp"
                        android:layout_height="150dp"
                        android:layout_centerInParent="true"
                        android:layout_margin="1dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/date"
                            style="@style/chat_timings"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@id/my_image_message"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="right"
                            android:layout_marginTop="10dp"
                            android:paddingBottom="5dp"
                            android:text="17:10"
                            android:textColor="@color/black" />

                        <ImageView
                            android:layout_marginLeft="5dp"
                            android:id="@+id/status"
                            android:layout_width="@dimen/size_10dp"
                            android:layout_height="@dimen/size_10dp"
                            android:layout_gravity="right"
                            android:src="@drawable/pending" />

                    </LinearLayout>

                </LinearLayout>



        </LinearLayout>
        <ProgressBar
            android:id="@+id/his_progress_view"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:indeterminate="true" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/privacy_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="5dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/privacy_image"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/privacy_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textColor="@color/black" />

        <ProgressBar
            android:id="@+id/pbar_loading"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:visibility="gone" />
    </LinearLayout>
</RelativeLayout>