<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.eslam.health.health.fragments.MyDecumentFragment">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <!--<ImageButton-->
        <!--android:layout_width="@dimen/size_35dp"-->
        <!--android:layout_height="@dimen/size_35dp"-->
        <!--android:background="@null"-->
        <!--android:scaleType="fitXY"-->
        <!--android:src="@drawable/back" />-->

        <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="@string/back"-->
        <!--android:textColor="@color/colorAccent"-->
        <!--android:textSize="@dimen/size_15sp"-->
        <!--android:textStyle="bold" />-->


        <ImageView
            android:layout_width="@dimen/size_40dp"
            android:layout_height="@dimen/size_40dp"
            android:layout_marginLeft="@dimen/size_30dp"
            android:src="@drawable/qr" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/my_decument"
            android:textColor="@color/black" />


        <!--<ImageButton-->
        <!--android:layout_width="@dimen/size_40dp"-->
        <!--android:layout_height="@dimen/size_35dp"-->
        <!--android:layout_gravity="right"-->
        <!--android:layout_marginRight="@dimen/size_25dp"-->
        <!--android:background="@null"-->
        <!--android:scaleType="fitXY"-->
        <!--android:src="@drawable/camera_icon"-->
        <!--tools:ignore="ContentDescription,RtlHardcoded" />-->
    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/size_10dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <LinearLayout
                android:layout_width="@dimen/size_90dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/size_20dp"
                        android:layout_height="@dimen/size_20dp"
                        android:layout_margin="@dimen/size_5dp"
                        android:src="@drawable/circle_green" />

                    <ImageView
                        android:layout_width="@dimen/size_20dp"
                        android:layout_height="@dimen/size_20dp"
                        android:layout_margin="@dimen/size_5dp"
                        android:src="@drawable/circle_green" />

                    <ImageView
                        android:layout_width="@dimen/size_20dp"
                        android:layout_height="@dimen/size_20dp"
                        android:layout_margin="@dimen/size_5dp"
                        android:src="@drawable/circle_green" />


                </TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/all_doctors" />
            </LinearLayout>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size_3dp"
                android:scaleType="fitXY"
                android:src="@drawable/placeholder" />
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <LinearLayout
                android:layout_width="@dimen/size_90dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/size_20dp"
                        android:layout_height="@dimen/size_20dp"
                        android:layout_margin="@dimen/size_5dp"
                        android:src="@drawable/circle_blue" />


                    <ImageView
                        android:layout_width="@dimen/size_20dp"
                        android:layout_height="@dimen/size_20dp"
                        android:layout_margin="@dimen/size_5dp"
                        android:src="@drawable/circle_blue" />


                </TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/my_doctors" />
            </LinearLayout>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size_3dp"
                android:scaleType="fitXY"
                android:src="@drawable/placeholder" />
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <LinearLayout
                android:layout_width="@dimen/size_90dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="2">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:layout_width="@dimen/size_20dp"
                        android:layout_height="@dimen/size_20dp"
                        android:layout_margin="@dimen/size_5dp"
                        android:src="@drawable/circle_red" />


                </TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/only_my_self" />
            </LinearLayout>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size_3dp"
                android:scaleType="fitXY"
                android:src="@drawable/placeholder" />
        </TableRow>


    </LinearLayout>


</LinearLayout>
