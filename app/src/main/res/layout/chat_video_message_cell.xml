<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/message_container"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/my_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="30dp"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bubble_in">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="150dp"
                    android:id="@+id/my_frame_video"
                    android:layout_height="150dp">

                    <ImageView
                        android:id="@+id/my_video_message"
                        android:layout_width="110dp"
                        android:scaleType="fitXY"
                        android:layout_height="150dp" />

                    <ImageView
                        android:layout_width="110dp"
                        android:layout_height="150dp"
                        android:layout_margin="1dp"
                        android:alpha="0.7"
                        android:scaleType="fitXY"
                        android:src="@drawable/video_frame" />

                </FrameLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_date_my"
                        style="@style/chat_timings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/my_text_message"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="right"
                        android:layout_marginTop="10dp"
                        android:paddingBottom="5dp"
                        android:text="17:10"
                        android:textColor="@color/white" />

                    <ImageView
                        android:layout_marginLeft="5dp"
                        android:id="@+id/my_message_status"
                        android:layout_width="@dimen/size_10dp"
                        android:layout_height="@dimen/size_10dp"
                        android:layout_gravity="right"
                        android:src="@drawable/pending" />

                </LinearLayout>

            </LinearLayout>


            <ProgressBar
                android:id="@+id/progress_view"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:layout_margin="30dp"
                android:indeterminate="true"
                android:max="100"
                android:progressDrawable="@drawable/shape_progress_circle" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/his_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:orientation="horizontal"
        android:visibility="visible"
        android:layout_below="@+id/my_message"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bubble_out">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="130dp"
                    android:id="@+id/his_frame_video"
                    android:layout_height="150dp">

                    <ImageView
                        android:id="@+id/his_video_message"
                        android:layout_width="110dp"
                        android:scaleType="fitXY"
                        android:layout_height="150dp" />

                    <ImageView
                        android:layout_width="110dp"
                        android:layout_height="150dp"
                        android:layout_margin="1dp"
                        android:alpha="0.7"
                        android:scaleType="fitXY"
                        android:src="@drawable/video_frame" />

                </FrameLayout>

                <TextView
                    android:id="@+id/tv_date"
                    style="@style/chat_timings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/his_text_message"
                    android:layout_gravity="right"
                    android:layout_toRightOf="@id/his_text_message"
                    android:paddingBottom="5dp"
                    android:text="17:10"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black" />
            </LinearLayout>

            <ProgressBar
                android:id="@+id/progress_view_download"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:layout_margin="20dp"
                android:indeterminate="true"
                android:max="100"
                android:progressDrawable="@drawable/shape_progress_circle"
                android:visibility="gone" />

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>