<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.germanitlab.kanonhealth.Comment">

    <FrameLayout
        android:layout_width="match_parent"
        android:paddingTop="20dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/please_rate"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:layout_centerInParent="true" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_back"
            android:src="@drawable/ic_arrow_back_black_24dp"
            tools:ignore="ContentDescription" />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:background="#d2cfcf"
        android:paddingTop="15dp"
        android:layout_below="@+id/img_back" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:layout_height="wrap_content"
        android:weightSum="6">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/img_doctor_image"
            android:layout_weight="5"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_weight="1"
            android:id="@+id/txt_doctor_name"
            android:padding="5dp"
            android:textColor="@color/black"
            android:text="@string/temp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#bcb8b8" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical">
    <RatingBar
        android:id="@+id/rb_doctor_rate"
        style="?android:attr/ratingBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:duplicateParentState="true"
        android:layout_margin="10dp"
        android:numStars="@integer/numstars"
        android:rating="0"/>
    <EditText
        android:layout_margin="10dp"
        android:background="@drawable/borderedittext"
        android:layout_width="match_parent"
        android:gravity="top"
        android:id="@+id/edt_comment"
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:imeOptions="actionSend"
        android:hint="@string/write_review_hint"
        android:textColor="@color/black"
        android:layout_height="200dp" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/submit"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:text="@string/evp_submit"/>
</LinearLayout>
    </ScrollView>
</LinearLayout>