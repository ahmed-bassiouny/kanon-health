<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/doctor_list_continer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <!--        <TextView
                    android:id="@+id/filter_to_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="13dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/gray"
                    android:paddingBottom="@dimen/size_5dp"
                    android:paddingTop="@dimen/size_5dp"
                    android:text="Filter"
                    android:textAlignment="center" />-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/doctor_list"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/gray"
                android:text="@string/doctors"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/praxis_list"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/gray"
                android:text="@string/practice"
                android:textAllCaps="false" />
        </LinearLayout>

        <EditText
            android:id="@+id/edt_doctor_list_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_10dp"
            android:background="@drawable/custom_edittext_without_border_style"
            android:drawableLeft="@drawable/search"
            android:gravity="center"
            android:hint="@string/search"
            android:imeOptions="actionDone"
            android:maxLines="1"
            android:paddingBottom="@dimen/size_5dp"
            android:paddingLeft="@dimen/size_20dp"
            android:paddingRight="@dimen/size_5dp"
            android:paddingTop="@dimen/size_5dp"
            android:singleLine="true"
            android:textColor="@color/gray_black"
            android:textCursorDrawable="@color/blue" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_doctor_chat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:paddingTop="@dimen/size_10dp" />
    </LinearLayout>

</FrameLayout>
