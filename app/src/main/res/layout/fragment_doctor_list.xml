<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/doctor_list_continer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--<android.support.v7.widget.Toolbar-->
        <!--android:visibility="gone"-->
        <!--android:id="@+id/doctor_chat_toolbar"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:background="@color/colorPrimary">-->


        <ImageView
            android:visibility="gone"
            android:id="@+id/img_filter"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:src="@drawable/filter" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/map"
            android:layout_width="50dp"
            android:layout_height="31dp"
            android:src="@drawable/map" />


        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Contacts"
            android:textColor="@color/black" />

        <ImageButton
            android:visibility="gone"
            android:id="@+id/scan"
            android:layout_width="@dimen/size_40dp"
            android:layout_height="36dp"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/size_15dp"
            android:background="@null"
            android:contentDescription=""
            android:scaleType="fitXY"
            android:src="@drawable/scan"
            tools:ignore="ContentDescription,RtlHardcoded" />

        <ImageButton
            android:visibility="gone"
            android:id="@+id/img_btn_search"
            android:layout_width="@dimen/size_40dp"
            android:layout_height="36dp"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/size_15dp"
            android:background="@null"
            android:contentDescription=""
            android:scaleType="fitXY"
            android:src="@drawable/search"
            android:tint="@color/black"
            tools:ignore="ContentDescription,RtlHardcoded" />


        <!--</android.support.v7.widget.Toolbar>-->

        <!--        <TextView
                    android:id="@+id/filter_to_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="13dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/gray"
                    android:paddingBottom="@dimen/size_5dp"
                    android:paddingTop="@dimen/size_5dp"
                    android:text="Filter"
                    android:textAlignment="center" />-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <Button
                android:background="@color/gray"
                android:id="@+id/doctor_list"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:text="Doctors" />

            <Button
                android:background="@color/gray"
                android:id="@+id/praxis_list"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:text="Practice" />
        </LinearLayout>

        <EditText
            android:id="@+id/edt_doctor_list_filter"
            android:layout_width="match_parent"
            android:textCursorDrawable="@color/blue"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_10dp"
            android:background="@drawable/custom_edittext_without_border_style"
            android:drawableLeft="@drawable/search"
            android:gravity="center"
            android:imeOptions="actionDone"
            android:maxLines="1"
            android:singleLine="true"
            android:hint="@string/search"
            android:paddingBottom="@dimen/size_5dp"
            android:paddingLeft="@dimen/size_20dp"
            android:paddingRight="@dimen/size_5dp"
            android:paddingTop="@dimen/size_5dp"
            android:textColor="@color/gray_black" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_doctor_chat"
            android:paddingTop="@dimen/size_10dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</FrameLayout>
