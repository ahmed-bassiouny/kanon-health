    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TableRow
                android:id="@+id/my_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/size_10sp"
                android:gravity="center">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="@dimen/size_20dp"
                    android:text="@string/my_profile"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/size_10dp"
                android:layout_marginEnd="@dimen/size_10dp"
                android:layout_marginTop="@dimen/size_3dp"
                android:background="@color/gray_black" />

            <TableRow
                android:id="@+id/tr_change_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/size_10sp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="@dimen/size_20dp"
                    android:text="@string/change_passcode"
                    android:id="@+id/tv_setting"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/size_10dp"
                android:layout_marginEnd="@dimen/size_10dp"
                android:layout_marginTop="@dimen/size_3dp"
                android:background="@color/gray_black" />


            <TableRow
                android:id="@+id/setting_weblogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/size_10sp"
                android:gravity="center">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="@dimen/size_20dp"
                    android:text="@string/kanon_health_web"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/size_10dp"
                android:layout_marginEnd="@dimen/size_10dp"
                android:layout_marginTop="@dimen/size_3dp"
                android:background="@color/gray_black" />


            <TableRow
                android:id="@+id/dr_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/size_10sp"
                android:gravity="center">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="@dimen/size_20dp"
                    android:text="@string/request_doctor_status"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/size_10dp"
                android:layout_marginEnd="@dimen/size_10dp"
                android:layout_marginTop="@dimen/size_3dp"
                android:id="@+id/v_under_dr_status"
                android:background="@color/gray_black" />


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_add_practice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/size_10sp"
                    android:paddingStart="@dimen/size_20dp"
                    android:visibility="gone"
                    android:text="@string/add_practice"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/line"
                android:visibility="gone"
                android:layout_marginStart="@dimen/size_10dp"
                android:layout_marginEnd="@dimen/size_10dp"
                android:layout_marginTop="@dimen/size_3dp"
                android:background="@color/gray_black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.RecyclerView
                    android:layout_margin="@dimen/size_5dp"
                    android:paddingStart="@dimen/size_20dp"
                    android:layout_marginBottom="@dimen/size_3dp"
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="vertical" />
            </LinearLayout>

            <View
                android:visibility="gone"
                android:layout_width="match_parent"
                android:id="@+id/v_line_under_clinics"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/size_10dp"
                android:layout_marginEnd="@dimen/size_10dp"
                android:background="@color/gray_black" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/size_10sp"
                android:gravity="center">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="@dimen/size_20dp"
                    android:text="@string/recommend_this_app_to_your_friends"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

            </TableRow>

            <View
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/size_10dp"
                android:layout_marginEnd="@dimen/size_10dp"
                android:layout_marginTop="@dimen/size_3dp"
                android:background="@color/gray_black" />


            <TableRow
                android:id="@+id/tr_mobile_number"
                android:padding="@dimen/size_10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="@dimen/size_20dp"
                    android:text="@string/change_phone_number"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/size_10dp"
                android:visibility="gone"
                android:layout_marginEnd="@dimen/size_10dp"
                android:layout_marginTop="@dimen/size_3dp"
                android:background="@color/gray_black" />

            <TableRow
                android:id="@+id/tr_sound"
                android:padding="@dimen/size_10sp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="@dimen/size_20dp"
                    android:text="@string/sound_and_notification"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:visibility="gone"
                android:layout_marginStart="@dimen/size_10dp"
                android:layout_marginEnd="@dimen/size_10dp"
                android:layout_marginTop="@dimen/size_3dp"
                android:background="@color/gray_black" />

            <TableRow
                android:id="@+id/tr_terms"
                android:layout_width="match_parent"
                android:padding="@dimen/size_10sp"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="@dimen/size_20dp"
                    android:text="@string/terms_and_conditions"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:visibility="gone"
                android:layout_marginStart="@dimen/size_10dp"
                android:layout_marginEnd="@dimen/size_10dp"
                android:layout_marginTop="@dimen/size_3dp"
                android:background="@color/gray_black" />

            <TableRow
                android:id="@+id/tr_faq"
                android:padding="@dimen/size_10sp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="@dimen/size_20dp"
                    android:text="@string/faq"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:visibility="gone"
                android:layout_marginStart="@dimen/size_10dp"
                android:layout_marginEnd="@dimen/size_10dp"
                android:layout_marginTop="@dimen/size_3dp"
                android:background="@color/gray_black" />

            <TableRow
                android:visibility="visible"
                android:id="@+id/tr_support"
                android:padding="@dimen/size_10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="@dimen/size_20dp"
                    android:text="@string/support"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/size_10dp"
                android:layout_marginEnd="@dimen/size_10dp"
                android:layout_marginTop="@dimen/size_3dp"
                android:background="@color/gray_black" />

            <TableRow
                android:id="@+id/tr_help"
                android:padding="@dimen/size_10sp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="@dimen/size_20dp"
                    android:text="@string/zxing_menu_help"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:visibility="gone"
                android:layout_marginStart="@dimen/size_10dp"
                android:layout_marginEnd="@dimen/size_10dp"
                android:layout_marginTop="@dimen/size_3dp"
                android:background="@color/gray_black" />

            <TableRow
                android:padding="@dimen/size_10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="@dimen/size_20dp"
                    android:text="@string/version"
                    android:textColor="@color/black"
                    android:textStyle="bold" />


            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/size_10dp"
                android:layout_marginEnd="@dimen/size_10dp"
                android:layout_marginTop="@dimen/size_3dp"
                android:background="@color/gray_black" />

            <TableRow
                android:padding="@dimen/size_5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/txt_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:visibility="gone"
                    android:layout_marginTop="10dp"
                    android:paddingStart="@dimen/size_15dp"
                    android:text="@string/you_are_now_offline"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:padding="@dimen/size_5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_change_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:text="@string/go_online"
                    android:textStyle="bold" />
            </TableRow>

        </LinearLayout>


    </ScrollView>


</LinearLayout>
