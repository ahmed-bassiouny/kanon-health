<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="@dimen/size_2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/background">
<FrameLayout
    android:layout_gravity="center"
    android:foregroundGravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_avatar_cell"
        android:layout_width="@dimen/size_80dp"
        android:layout_height="@dimen/size_80dp"
        android:src="@drawable/profile_place_holder" />
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="15dp"
        android:id="@+id/status"
        android:layout_height="15dp"
        android:layout_gravity="bottom|right"
        android:layout_margin="5dp"
        android:src="@color/medium_grey"/>
</FrameLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/size_2dp">

                <TextView
                    android:id="@+id/tv_doctor_name_cell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_doctor_date_cell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:ems="5"
                    android:gravity="center"
                    android:text="09:22 AM" />
            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/size_2dp">

                <TextView
                    android:id="@+id/tv_specialities"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Specialities"
                    android:textColor="@color/medium_grey"
                    android:textSize="@dimen/size_15sp" />

            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ScrollView
                    android:id="@+id/scrollView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                <LinearLayout
                    android:id="@+id/ll_dynamic_specialist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/size_3dp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_lable_cell"
                        android:layout_width="20dp"
                        android:visibility="gone"
                        android:layout_height="20dp"
                        android:padding="@dimen/size_3dp"
                        android:src="@drawable/doctor_icon" />
                </LinearLayout>
                </ScrollView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="@dimen/size_3dp">

                    <TextView
                        android:id="@+id/tv_about_doctor_cell"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:id="@+id/tv_sub_title_cell"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                </LinearLayout>


                <TextView
                    android:id="@+id/tv_unread_message_cell"
                    android:layout_width="@dimen/size_35dp"
                    android:layout_height="@dimen/size_35dp"
                    android:background="@drawable/unread_message_bg"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/white" />
            </TableRow>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>