<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/size_15dp"
    android:layout_marginStart="@dimen/size_15dp"
    android:layout_marginTop="@dimen/size_10dp"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="@dimen/size_5dp">

    <LinearLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/img_avatar_cell"
                android:layout_width="@dimen/size_70dp"
                app:civ_border_color="#cfcdcd"
                app:civ_border_width="@dimen/size_3dp"
                android:layout_height="@dimen/size_70dp"
                android:src="@drawable/placeholder" />
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/status"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="bottom|right"
                android:layout_margin="3dp"
                android:src="@color/medium_grey" />

        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_15dp"
            android:gravity="center"
            android:orientation="vertical">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_doctor_name_cell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAllCaps="true"
                    android:maxLines="1"
                    android:lines="1"
                    android:ellipsize="end"
                    android:textColor="@color/title_gray"
                    android:textSize="@dimen/size_15sp"
                    android:textStyle="bold"
                    tools:text="fdtrdrtd" />

                <TextView
                    android:id="@+id/tv_doctor_date_cell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:ems="5"
                    android:gravity="center"
                    android:text="09:22 AM" />
            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_practice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/size_2dp"
                    android:gravity="left"
                    android:layout_marginTop="@dimen/size_2dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:lines="1"
                    android:visibility="invisible"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/title_gray"
                    android:textSize="@dimen/size_15sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_specialities"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/size_2dp"
                    android:layout_marginTop="@dimen/size_2dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:lines="1"
                    android:maxLines="1"
                    android:text="Doctor specialities"
                    android:textColor="@color/text_msg_input"
                    android:textSize="@dimen/size_15sp" />

            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="23dp">

                <ScrollView
                    android:id="@+id/scrollView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/ll_dynamic_specialist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/img_lable_cell"
                            android:layout_width="15dp"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/size_3dp"
                            android:paddingRight="@dimen/size_3dp"
                            android:src="@drawable/doctor_icon"
                            android:visibility="gone" />
                    </LinearLayout>
                </ScrollView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_about_doctor_cell"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:id="@+id/tv_sub_title_cell"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                </LinearLayout>


                <TextView
                    android:id="@+id/tv_unread_message_cell"
                    android:layout_width="@dimen/size_35dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/unread_message_bg"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/white" />
            </TableRow>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>