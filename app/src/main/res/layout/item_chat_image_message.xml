<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/background"
        android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/message_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="30dp"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bubble_in">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/image_message"
                    android:layout_width="match_parent"
                    android:scaleType="fitXY"
                    android:layout_height="match_parent"
                    android:minHeight="150dp"
                    android:minWidth="150dp"
                    android:adjustViewBounds="true"
                    android:maxWidth="250dp"
                    android:maxHeight="250dp"
                    android:layout_centerInParent="true"
                    android:layout_margin="1dp" />

                <TextView
                    android:id="@+id/message"
                    style="@style/chat_timings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:paddingBottom="5dp"
                    android:text="texxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxt"
                    android:textColor="@color/black" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/date"
                        style="@style/chat_timings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/my_image_message"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="right"
                        android:layout_marginTop="10dp"
                        android:paddingBottom="5dp"
                        android:text="17:10"
                        android:textColor="@color/black" />

                    <ImageView
                        android:layout_marginLeft="5dp"
                        android:id="@+id/status"
                        android:layout_width="@dimen/size_10dp"
                        android:layout_height="@dimen/size_10dp"
                        android:layout_gravity="right"
                        android:src="@drawable/pending" />

                </LinearLayout>


            </LinearLayout>


            <ProgressBar
                android:id="@+id/progress_view_download"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:layout_margin="30dp"
                android:indeterminate="true"
                android:max="100"
                android:visibility="gone"
                android:progressDrawable="@drawable/shape_progress_circle" />


        </RelativeLayout>

    </LinearLayout>
    </RelativeLayout>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:id="@+id/privacy_image" />
</RelativeLayout>