<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/img_view_take_photo"
            android:layout_width="@dimen/img_view_take_photo_w"
            android:layout_height="@dimen/img_view_take_photo_h"
            android:layout_gravity="center"
            android:layout_margin="@dimen/size_10dp"
            android:background="@drawable/camera" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#ffff" />

        <ImageView
            android:id="@+id/img_view_gallery"
            android:layout_width="@dimen/img_view_gallery_w"
            android:layout_height="@dimen/img_view_gallery_h"
            android:layout_gravity="center"
            android:layout_margin="@dimen/size_10dp"
            android:background="@drawable/galary" />


        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#ffff" />

        <ImageView
            android:id="@+id/img_view_video"
            android:layout_width="@dimen/img_view_video_w"
            android:layout_height="@dimen/img_view_video_h"
            android:layout_gravity="center"
            android:layout_margin="@dimen/size_10dp"
            android:background="@drawable/video" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffff" />

    <LinearLayout


        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/img_view_location"
            android:layout_width="@dimen/img_view_video_w"
            android:layout_height="@dimen/img_view_video_h"
            android:layout_gravity="center"
            android:layout_margin="@dimen/size_10dp"
            android:background="@drawable/location" />


        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#ffff" />

        <ImageView
            android:id="@+id/log_out"
            android:layout_width="@dimen/img_view_video_w"
            android:layout_height="@dimen/img_view_video_h"
            android:layout_gravity="center"
            android:layout_margin="@dimen/size_10dp"
            android:background="@drawable/location" />

    </LinearLayout>

</LinearLayout>