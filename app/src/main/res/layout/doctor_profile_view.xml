<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">




    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_new"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ToolbarColoredBackArrow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@color/black"
        app:subtitleTextColor="@color/black"
        android:titleTextColor="@color/black"
        android:background="@color/white">
        <TextView
            android:id="@+id/toolbar_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_profile"
            android:maxLines="2"
            android:lines="2"
            android:textSize="18sp"
            android:textColor="@color/black"/>

    </android.support.v7.widget.Toolbar>

    <View
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/activity_profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">


        <android.support.v7.widget.Toolbar
            android:visibility="gone"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/my_profile"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/edit"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="52dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/edit_icon"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/save"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="52dp"
                    android:layout_gravity="right"
                    android:tint="@color/black"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ic_done_all_white_24dp"
                    android:visibility="gone" />
            </FrameLayout>


        </android.support.v7.widget.Toolbar>

<View
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/black"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/edit_profile_liner_layout_bottom_margin"
                        android:layout_marginTop="@dimen/edit_profile_liner_layout_bottom_margin"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="@dimen/edit_profile_liner_layout_bottom_margin">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/img_edit_avatar"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            app:civ_border_width="1dp"
                            app:civ_border_color="@color/black"
                            android:layout_gravity="center"
                            android:src="@drawable/placeholder" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignEnd="@+id/img_edit_avatar"
                            android:layout_alignParentTop="true"
                            android:visibility="gone"
                            android:id="@+id/edit_image"
                            android:layout_alignRight="@+id/img_edit_avatar"
                            android:src="@drawable/camera" />





                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/ll_doctor_data"
                        android:layout_width="@dimen/size_10dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/tv_online"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_margin="5dp"
                            android:enabled="false"
                            android:layout_weight="1"
                            android:lines="1"
                            android:textSize="15sp"
                            android:maxLines="1"
                            android:background="@drawable/custom_edittext_without_border_style"
                            android:gravity="center"
                            android:text="@string/status_online"
                            android:textAlignment="center"
                            android:textColor="@color/black" />

                        <EditText
                            android:id="@+id/ed_add_to_favourite"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:focusable="false"
                            android:clickable="true"
                            android:layout_weight="1"
                            android:lines="1"
                            android:textSize="15sp"
                            android:maxLines="1"
                            android:background="@drawable/custom_edittext_without_border_style"
                            android:gravity="center"
                            android:text="@string/add_to"
                            android:textAlignment="center"
                            android:textColor="@android:color/background_dark" />

                        <EditText
                            android:id="@+id/tv_contact"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:focusable="false"
                            android:clickable="true"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:lines="1"
                            android:textSize="15sp"
                            android:maxLines="1"
                            android:background="@drawable/custom_edittext_without_border_style"
                            android:gravity="center"
                            android:text="@string/contact_by_chat"
                            android:textAlignment="center"
                            android:textColor="@android:color/background_dark" />



                    </LinearLayout>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="2dp"
                    android:background="@color/black" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/edit_profile_liner_layout_bottom_margin"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rating "
                        android:textColor="@android:color/background_dark"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/image_star"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:rotation="180"
                        android:src="@drawable/ic_arrow_back_black_24dp" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/edit_profile_liner_layout_bottom_margin"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatRatingBar
                        android:id="@+id/ratingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:isIndicator="true"
                        android:numStars="5" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="2dp"
                    android:background="@color/black" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/specilities_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="Specialities"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/background_dark" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/speciality_recycleview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/specilities_text"
                        android:background="@android:color/white"></android.support.v7.widget.RecyclerView>


                    <ImageView
                        android:id="@+id/edit_speciality_list"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="9dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/edit"
                        android:textColor="@android:color/background_dark"
                        android:visibility="gone" />
                </RelativeLayout>


                <TextView
                    android:id="@+id/tv_specilities"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/background_dark"
                    android:textSize="16dp" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="2dp"
                    android:background="@color/black" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="Location"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/background_dark"
                        android:id="@+id/textView4" />



                    <ImageView
                        android:id="@+id/iv_location"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/placeholder"
                        android:textColor="@android:color/background_dark"
                        android:layout_alignTop="@+id/textView4"
                        android:layout_toEndOf="@+id/textView4" />
                </RelativeLayout>


                <TextView
                    android:id="@+id/tv_locations"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="kjkjojoij"
                    android:textColor="@android:color/background_dark"
                    android:textSize="16dp" />

                <View
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:id="@+id/border"
                    android:background="@color/black" />


                <RelativeLayout
                    android:layout_width="343dp"
                    android:layout_height="150dp"
                    android:id="@+id/rl_map"
                    android:orientation="vertical">
                    <!--loading map in container-->
                    <fragment
                        android:id="@+id/map"
                        android:clickable="false"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:context=".DoctorProfileActivity"/>

                    <!--<com.germanitlab.kanonhealth.RadiusOverlayView-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:layout_alignParentTop="true"-->
                    <!--android:layout_alignParentStart="true" />-->
                    android:layout_height="match_parent"/>

                </RelativeLayout>
                <View
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:background="@color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linear_practice_profile"
                    android:orientation="vertical">
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:text="@string/location"/>
                        <EditText
                            android:layout_width="match_parent"
                            android:id="@+id/ed_location"
                            android:inputType="textPersonName"
                            android:imeOptions="actionNext"
                            android:nextFocusForward="@+id/ed_street_name"
                            android:maxLines="1"
                            android:enabled="false"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"/>
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:text="@string/streat"/>
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:textSize="16sp"
                            android:inputType="textPersonName"
                            android:imeOptions="actionNext"
                            android:nextFocusForward="@+id/ed_house_number"
                            android:maxLines="1"
                            android:textStyle="bold"
                            android:id="@+id/ed_street_name"/>
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView

                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:text="@string/house_number"/>
                        <EditText
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:imeOptions="actionNext"
                            android:nextFocusForward="@+id/ed_zip_code"
                            android:maxLines="1"
                            android:enabled="false"
                            android:id="@+id/ed_house_number"/>
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView

                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:text="@string/zip_code"/>
                        <EditText
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:enabled="false"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:imeOptions="actionNext"
                            android:nextFocusForward="@+id/ed_city"
                            android:maxLines="1"
                            android:id="@+id/ed_zip_code"/>
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView

                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:text="@string/city"/>
                        <EditText

                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:imeOptions="actionNext"
                            android:nextFocusForward="@+id/ed_province"
                            android:maxLines="1"
                            android:enabled="false"
                            android:id="@+id/ed_city"/>
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView

                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:text="@string/province"/>
                        <EditText

                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:enabled="false"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:imeOptions="actionNext"
                            android:nextFocusForward="@+id/ed_country"
                            android:maxLines="1"
                            android:id="@+id/ed_province"/>
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:text="@string/country"/>
                        <EditText
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:imeOptions="actionNext"
                            android:nextFocusForward="@+id/et_telephone"
                            android:maxLines="1"
                            android:enabled="false"
                            android:id="@+id/ed_country"/>
                    </TableRow>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:background="@color/black" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/language_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="Languages"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/background_dark" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/language_recycleview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="@dimen/size_5dp"
                        android:layout_toRightOf="@+id/language_text"
                        android:background="@android:color/white"></android.support.v7.widget.RecyclerView>

                    <TextView
                        android:id="@+id/tv_languages"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/language_recycleview"
                        android:textColor="@android:color/background_dark"
                        android:textSize="16dp" />

                    <ImageView
                        android:id="@+id/edit_languages_list"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignTop="@id/language_recycleview"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/edit"
                        android:textColor="@android:color/background_dark"
                        android:visibility="gone" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:background="@color/black" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/member_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:text="Member In Practice"

                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/background_dark" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/member_recycleview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@+id/member_text"
                        android:layout_marginLeft="@dimen/size_5dp"
                        android:background="@android:color/white"></android.support.v7.widget.RecyclerView>

                    <ImageView
                        android:id="@+id/edit_member_list"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignTop="@id/member_recycleview"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/edit"
                        android:textColor="@android:color/background_dark"
                        android:visibility="gone" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:background="@color/black" />


                <View
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:background="@color/black" />
                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/edit_profile_liner_layout_bottom_margin"
                    android:orientation="vertical">

                    <TextView

                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:text="@string/important_info"
                        android:textColor="@android:color/background_dark" />

                    <TextView

                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_width="200dp"
                        android:layout_height="2dp"
                        android:layout_marginBottom="3dp"
                        android:background="@android:color/background_dark" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/edit_profile_liner_layout_bottom_margin"
                    android:orientation="horizontal">

                    <TextView

                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:hint="@string/first_name"
                        android:text="Working Hours"
                        android:textColor="@android:color/background_dark"/>


                    <ImageView

                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:id="@+id/edit_time_table"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center|right"
                        android:layout_marginLeft="8dp"
                        android:gravity="bottom"
                        android:src="@drawable/edit"
                        android:visibility="gone"
                        android:textColor="@android:color/background_dark"/>
                </RelativeLayout>



                <LinearLayout
                    android:id="@+id/no_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/edit_profile_liner_layout_bottom_margin"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_no_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:padding="@dimen/size_5dp"
                        android:text="No Time has set"
                        android:textColor="@color/red"
                        android:textCursorDrawable="@color/black"
                        android:textStyle="bold" />
                </LinearLayout>
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:id="@+id/tablelayout">
                </TableLayout>
                <View
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="2dp"
