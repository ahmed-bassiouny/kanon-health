<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/message_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/my_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="30dp"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bubble_in">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/my_image_message"
                    android:layout_width="130dp"
                    android:layout_height="150dp"
                    android:layout_centerInParent="true"
                    android:layout_margin="1dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_date_my"
                        style="@style/chat_timings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/my_image_message"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="right"
                        android:layout_marginTop="10dp"
                        android:paddingBottom="5dp"
                        android:text="17:10"
                        android:textColor="@color/black" />

                    <ImageView
                        android:layout_marginLeft="5dp"
                        android:id="@+id/my_message_status"
                        android:layout_width="@dimen/size_10dp"
                        android:layout_height="@dimen/size_10dp"
                        android:layout_gravity="right"
                        android:src="@drawable/pending" />

                </LinearLayout>



            </LinearLayout>

            <ProgressBar
                android:id="@+id/my_progress_view"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:indeterminate="true"
                android:layout_centerInParent="true"
                android:layout_margin="30dp" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/his_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:visibility="visible">


        <RelativeLayout
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bubble_out">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/his_image_message"
                    android:layout_width="130dp"
                    android:layout_height="150dp"
                    android:layout_centerInParent="true"
                    android:layout_margin="1dp" />

                <TextView
                    android:id="@+id/tv_date"
                    style="@style/chat_timings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/his_image_message"
                    android:layout_gravity="right"
                    android:layout_toRightOf="@id/his_image_message"
                    android:paddingBottom="5dp"
                    android:text="17:10"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black" />

            </LinearLayout>

            <ProgressBar
                android:id="@+id/his_progress_view"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:indeterminate="true"
                android:layout_margin="30dp" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>